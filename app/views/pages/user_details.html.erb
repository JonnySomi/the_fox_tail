<body class="font-sans leading-normal tracking-normal">
  <main>
    <div class="flex flex-col md:flex-row">
      <nav aria-label="alternative-nav">
        <div class="shadow-xl h-20 fixed bottom-0 md:relative md:h-screen z-10 w-full md:w-48 content-center">
          <div class="md:mt-3 md:w-48 md:left-0 md:top-0 content-center md:content-start text-left justify-between">
            <ul class="list-reset flex flex-col md:flex-col pt-1 md:py-3 px-1 md:px-2 text-center md:text-left">
              <li class="mr-3 flex-1">
                <a href="<%= dashboard_path(current_user)%>" class="block py-1 md:py-3 pl-1 align-middle no-underline">
                  <i class="fas fa-chart-area pr-0 md:pr-3"></i><span class="pb-1 md:pb-0 text-xs md:text-base block md:inline-block">Analytics</span>
                </a>
              </li>
              <% current_user.user_services.each do |user_service| %>
                <li class="mr-3 flex-1 block py-1 md:py-3 pl-1 align-middle no-underline">
                  <%= link_to user_service.service.name, user_service_path(user_service), class: 'pb-1 md:pb-0 text-xs md:text-base block' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <section>
        <div id="main" class="main-content flex-1 pb-24 md:pb-5">
          <div class="title bg-gradient-to-r from-red-900 to-gray-900 p-4 shadow text-2xl">
            <h1 class="font-bold pl-2">Your details</h1>
          </div>
          <div class="flex flex-wrap">
            <div class="container">
              <div class="main-body">
                <div class="row d-flex" style="height: 60vh;">
                  <div class="col-md-5 mb-3 pt-3">
                    <div class="card-user-details card" style="height: 100%">
                      <div class="card-body d-flex align-items-center justify-center">
                        <div class="d-flex flex-column align-items-center", style="width: 80%;">
                          <%= cl_image_tag current_user.photo.key, class:'dashboard-avatar'%>
                          <div class="mt-3">
                            <h2 class="welcometext justify-center"><strong><%= current_user.first_name %></strong></h2>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-7 pt-3">
                    <div class="card-user-details card  mb-3 " style="height: 80%">
                      <div class="card-body">
                        <div class="row d-flex" style="height: 15%">
                          <div class="col-sm-12 d-flex justify-content-end pr-5">
                          <%= link_to edit_user_registration_path(current_user) do %>
                            <i class="fas fa-edit"></i>
                          <% end%>
                          </div>
                        </div>
                        <div class="row d-flex align-items-center" style="height: 28%">
                          <div class="col-sm-3">
                            <h6 class="mb-0 text2 details-text">Full Name</h6>
                          </div>
                          <div class="col-sm-9  text-secondary">
                            <h6 class="user-details-text"><%= "#{current_user.first_name} #{current_user.last_name}" %></h6>
                          </div>
                        </div>
                        <hr>
                        <div class="row d-flex align-items-center" style="height: 28%">
                          <div class="col-sm-3">
                            <h6 class="mb-0 text2 details-text">Email</h6>
                          </div>
                          <div class="col-sm-9 text-secondary">
                            <h6 class="user-details-text"><%= current_user.email %></h6>
                          </div>
                        </div>
                        <hr>
                        <div class="row d-flex align-items-center" style="height: 28%">
                          <div class="col-sm-3">
                            <h6 class="mb-0 text2 details-text">Pseudo</h6>
                          </div>
                          <div class="col-sm-9 text-secondary">
                             <h6 class="user-details-text"><%= current_user.pseudo %></h6>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</body>
